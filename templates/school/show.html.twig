{% extends 'base.html.twig' %}

{% block title %}School
{% endblock %}

{% block body %}
	<div class="container mx-auto p-6">
		<h1 class="text-3xl font-bold mb-6">School</h1>

		<!-- Table des informations -->
		<div class="bg-white p-6 rounded-lg shadow-md">
			<table class="table-auto w-full text-left border-collapse border border-gray-300">
				<tbody>
					<tr class="bg-gray-100">
						<th class="px-4 py-2 border border-gray-300 font-medium">Address</th>
						<td class="px-4 py-2 border border-gray-300">{{ school.address }}</td>
					</tr>
					<tr>
						<th class="px-4 py-2 border border-gray-300 font-medium">Zipcode</th>
						<td class="px-4 py-2 border border-gray-300">{{ school.zipcode }}</td>
					</tr>
					<tr class="bg-gray-100">
						<th class="px-4 py-2 border border-gray-300 font-medium">City</th>
						<td class="px-4 py-2 border border-gray-300">{{ school.city }}</td>
					</tr>
					<tr>
						<th class="px-4 py-2 border border-gray-300 font-medium">Phone</th>
						<td class="px-4 py-2 border border-gray-300">{{ school.phone }}</td>
					</tr>
					<tr class="bg-gray-100">
						<th class="px-4 py-2 border border-gray-300 font-medium">Email</th>
						<td class="px-4 py-2 border border-gray-300">{{ school.email }}</td>
					</tr>
					<tr>
						<th class="px-4 py-2 border border-gray-300 font-medium">Name</th>
						<td class="px-4 py-2 border border-gray-300">{{ school.name }}</td>
					</tr>
                    					<tr>
						<th class="px-4 py-2 border border-gray-300 font-medium">Classes</th>
						<td class="px-4 py-2 border border-gray-300">
							{% if school.grades is iterable %}
								{% for grade in school.grades %}
									{{ grade.className }}
									{% if not loop.last %},
									{% endif %}
								{% endfor %}
							{% else %}
								{{ school.grades }}
							{% endif %}
						</td>
					</tr>
				</tbody>
			</table>
		</div>

		<!-- Boutons d'action -->
		<div class="mt-6">
			<a href="{{ path('app_school_index') }}" class="inline-block px-6 py-2 text-white bg-gray-600 hover:bg-gray-700 rounded-lg font-medium">
				Retour Ã  la liste
			</a>
		</div>
	</div>
{% endblock %}
