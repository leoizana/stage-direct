{% extends 'base.html.twig' %}

{% block title %}internship Index{% endblock %}

{% block body %}
    <div class="container mx-auto p-6">
        <h1 class="text-4xl font-extrabold text-gray-800 mb-6">Liste des Stages</h1>

        <!-- Barre de recherche instantanée -->
        <div class="mb-4">
            <input type="text" id="search-classe" placeholder="Rechercher par classe"
                   class="px-4 py-2 border border-gray-300 rounded-lg w-64"
                   onkeyup="searchinternships()">

            <input type="text" id="search-session" placeholder="Rechercher par session"
                   class="px-4 py-2 border border-gray-300 rounded-lg w-64"
                   onkeyup="searchinternships()">
        </div>

        <!-- Table container -->
        <div class="overflow-x-auto shadow-md sm:rounded-lg">
            <table class="min-w-full table-auto text-left" id="internships-table">
                <thead class="bg-gray-800 text-white">
                    <tr>
                        <th class="py-3 px-6 text-sm font-medium text-gray-300">Id</th>
                        <th class="py-3 px-6 text-sm font-medium text-gray-300">Classe</th>
                        <th class="py-3 px-6 text-sm font-medium text-gray-300">Session</th>
                        <th class="py-3 px-6 text-sm font-medium text-gray-300">Thèmes</th>
                        <th class="py-3 px-6 text-sm font-medium text-gray-300">Actions</th>
                    </tr>
                </thead>
                <tbody id="internships-tbody">
                    {% for internship in internships %}
                        <tr class="border-b border-gray-200">
                            <td class="py-3 px-6">{{ internship.id }}</td>
                            <td class="py-3 px-6">{{ internship.classeEleve }}</td>
                            <td class="py-3 px-6">{{ internship.session }}</td>
                            <td class="py-3 px-6">{{ internship.themes }}</td>
                            <td class="py-3 px-6 space-x-4">
                                <a href="{{ path('app_internship_show', {'id': internship.id}) }}" 
                                   class="text-blue-600 hover:text-blue-800 font-medium">Voir</a>

                                <a href="{{ path('app_internship_edit', {'id': internship.id}) }}" 
                                   class="text-yellow-600 hover:text-yellow-800 font-medium">Modifier</a>

                                <a href="{{ path('app_internship_delete', {'id': internship.id}) }}" 
                                   class="text-red-600 hover:text-red-800 font-medium"
                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce stage ?')">Supprimer</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="py-3 px-6 text-center text-gray-500">Aucun enregistrement trouvé</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>


        <div class="mt-6">
            <a href="{{ path('app_internship_new') }}" 
               class="inline-block px-6 py-2 text-white bg-blue-600 hover:bg-blue-700 rounded-lg font-medium">
                Créer un nouveau stage
            </a>
        </div>
    </div>


    <script>
        function searchinternships() {
            const classeFilter = document.getElementById("search-classe").value.toLowerCase();
            const sessionFilter = document.getElementById("search-session").value.toLowerCase();

            const rows = document.querySelectorAll("#internships-tbody tr");

            rows.forEach(row => {
                const classeCell = row.cells[1].textContent.toLowerCase();
                const sessionCell = row.cells[2].textContent.toLowerCase();

                // Filtrage par classe et session
                if (classeCell.includes(classeFilter) && sessionCell.includes(sessionFilter)) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        }
    </script>

{% endblock %}
