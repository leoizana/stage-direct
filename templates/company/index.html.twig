{% extends 'base.html.twig' %}

{% block title %}Liste des Entreprises{% endblock %}

{% block body %}
<div class="container mx-auto py-8 px-4">
    <!-- Titre principal -->
    <h1 class="text-4xl font-extrabold text-gray-800 mb-8 text-center">Liste des Entreprises</h1>

    <!-- Barre de recherche -->
    <div class="mb-6 flex justify-center">
        <input type="text" id="search-bar" placeholder="Rechercher par nom ou ville"
               class="w-full max-w-lg px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring focus:ring-blue-200"
               onkeyup="searchCompanies()">
    </div>

    <!-- Tableau des entreprises -->
    <div class="overflow-x-auto shadow-md sm:rounded-lg">
        <table class="min-w-full text-sm text-gray-800 bg-white border border-gray-300 rounded-lg">
            <thead class="bg-blue-600 text-white">
                <tr>
                    <th class="py-3 px-6 font-semibold">Id</th>
                    <th class="py-3 px-6 font-semibold">Nom</th>
                    <th class="py-3 px-6 font-semibold">Rue</th>
                    <th class="py-3 px-6 font-semibold">Code Postal</th>
                    <th class="py-3 px-6 font-semibold">Ville</th>
                    <th class="py-3 px-6 font-semibold">Pays</th>
                    <th class="py-3 px-6 font-semibold">Téléphone</th>
                    <th class="py-3 px-6 font-semibold">Email</th>
                    <th class="py-3 px-6 font-semibold">Actions</th>
                </tr>
            </thead>
            <tbody id="companies-tbody">
                {% for company in companies %}
                    <tr class="border-b hover:bg-gray-100">
                        <td class="py-3 px-6">{{ company.id }}</td>
                        <td class="py-3 px-6">{{ company.name }}</td>
                        <td class="py-3 px-6">{{ company.street }}</td>
                        <td class="py-3 px-6">{{ company.zipCode }}</td>
                        <td class="py-3 px-6">{{ company.city }}</td>
                        <td class="py-3 px-6">{{ company.country }}</td>
                        <td class="py-3 px-6">{{ company.phone }}</td>
                        <td class="py-3 px-6">{{ company.email }}</td>
                        <td class="py-3 px-6 flex items-center justify-center space-x-2">
                            <!-- Icône de visualisation -->
                            <a href="{{ path('app_company_show', {'id': company.id}) }}" class="text-blue-600 hover:text-blue-800 font-medium flex items-center">
                                <img src="{{ asset('svg/eye-svgrepo-com.svg') }}" alt="Voir" class="w-5 h-5">
                            </a>
                            {% if is_granted('ROLE_ADMIN') %}
                            <!-- Icône d'édition -->
                            <a href="{{ path('app_company_edit', {'id': company.id}) }}" class="text-yellow-600 hover:text-yellow-800 font-medium flex items-center">
                                <img src="{{ asset('svg/pencil-svgrepo-com.svg') }}" alt="Éditer" class="w-5 h-5">
                            </a>
                            
                            <!-- Formulaire de suppression -->
                            <form method="post" action="{{ path('app_company_delete', {'id': company.id}) }}" 
                                  onsubmit="return confirm('Etes-vous sûr de vouloir supprimer cette entreprise ?');" 
                                  class="flex items-center">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ company.id) }}">
                                <button type="submit" class="text-red-600 hover:text-red-800 font-medium flex items-center">
                                    <img src="{{ asset('svg/trash-svgrepo-com.svg') }}" alt="Supprimer" class="w-5 h-5">
                                </button>
                            </form>
                            {% endif %}
                        </td>  
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="py-3 px-6 text-center text-gray-500">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% if is_granted('ROLE_STUDENT') %}
    <!-- Bouton pour créer une nouvelle entreprise -->
    <div class="mt-6 text-center">
        <a href="{{ path('app_company_new') }}"
           class="inline-block px-6 py-3 text-white bg-blue-600 hover:bg-blue-700 rounded-lg font-medium shadow-lg">
            Créer une nouvelle entreprise
        </a>
    </div>
</div>
{% endif %}

<script>
    function searchCompanies() {
        const filter = document.getElementById("search-bar").value.toLowerCase();
        const rows = document.querySelectorAll("#companies-tbody tr");

        rows.forEach(row => {
            const nameCell = row.cells[1]?.textContent.toLowerCase();
            const cityCell = row.cells[4]?.textContent.toLowerCase();

            if (nameCell.includes(filter) || cityCell.includes(filter)) {
                row.style.display = "";
            } else {
                row.style.display = "none";
            }
        });
    }
</script>
{% endblock %}
