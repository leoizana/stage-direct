{% extends 'base.html.twig' %}

{% block title %}Nouvelle Entreprise{% endblock %}

{% block body %}
<div class="container mx-auto p-6">
    <!-- Titre principal -->
    <h1 class="text-4xl font-extrabold text-gray-800 mb-6">Créer une Nouvelle Entreprise</h1>

    <!-- Formulaire -->
    <div class="bg-white p-8 rounded-lg shadow-md">
        <h2 class="text-xl font-semibold text-gray-700 mb-4">Informations sur l'Entreprise</h2>

        <form method="post" action="{{ path('app_company_new') }}" class="space-y-6">
            {{ form_start(form) }}

            <!-- Champs du formulaire -->
            {{ include('company/_form.html.twig') }}

            <!-- Boutons d'action -->
            <div class="mt-6 flex justify-between">
                <!-- Bouton Retour -->
                <a href="{{ path('app_company_index') }}" 
                   class="inline-block px-6 py-2 text-white bg-gray-600 hover:bg-gray-700 rounded-lg font-medium">
                    Retour à la liste
                </a>

                <!-- Bouton Sauvegarder -->
                <button type="submit" 
                        class="inline-block px-6 py-2 text-white bg-blue-600 hover:bg-blue-700 rounded-lg font-medium">
                    Enregistrer
                </button>
            </div>

            {{ form_end(form) }}
        </form>
    </div>
</div>
{% endblock %}
