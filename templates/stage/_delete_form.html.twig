<form method="post" action="{{ path('app_stage_delete', {'id': stage.id}) }}" 
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ stage.id) }}">
    <button type="submit" 
            class="px-6 py-2 text-white bg-red-600 hover:bg-red-700 rounded-lg font-medium">
        Supprimer
    </button>
</form>
