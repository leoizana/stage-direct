{% extends 'base.html.twig' %}

{% block title %}Détails du Stage{% endblock %}

{% block body %}
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-bold mb-6">Détails du Stage</h1>

        <!-- Table des informations -->
        <div class="bg-white p-6 rounded-lg shadow-md">
            <table class="table-auto w-full text-left border-collapse border border-gray-300">
                <tbody>
                    <tr>
                        <th class="px-4 py-2 border border-gray-300 font-medium">Classe de l'élève</th>
                        <td class="px-4 py-2 border border-gray-300">{{ stage.classeEleve }}</td>
                    </tr>
                    <tr class="bg-gray-100">
                        <th class="px-4 py-2 border border-gray-300 font-medium">Date de début</th>
                        <td class="px-4 py-2 border border-gray-300">{{ stage.dateDebut|date('d/m/Y') }}</td>
                    </tr>
                    <tr>
                        <th class="px-4 py-2 border border-gray-300 font-medium">Date de fin</th>
                        <td class="px-4 py-2 border border-gray-300">{{ stage.dateFin|date('d/m/Y') }}</td>
                    </tr>
                    <tr class="bg-gray-100">
                        <th class="px-4 py-2 border border-gray-300 font-medium">Session</th>
                        <td class="px-4 py-2 border border-gray-300">{{ stage.session }}</td>
                    </tr>
                    <tr>
                        <th class="px-4 py-2 border border-gray-300 font-medium">Thèmes</th>
                        <td class="px-4 py-2 border border-gray-300">{{ stage.themes }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Bouton retour -->
        <div class="mt-6">
            <a href="{{ path('app_stage_index') }}" 
               class="inline-block px-6 py-2 text-white bg-gray-600 hover:bg-gray-700 rounded-lg font-medium">
                Retour à la liste
            </a>
        </div>
    </div>
{% endblock %}
