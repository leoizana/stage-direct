{% extends 'base.html.twig' %}

{% block title %}Stage Index{% endblock %}

{% block body %}
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-bold mb-4">Gestion des Stages</h1>

        <!-- Table container -->
        <div class="overflow-x-auto shadow-md sm:rounded-lg">
            <table class="min-w-full table-auto text-left">
                <thead class="bg-gray-800 text-white">
                    <tr>
                        <th class="py-3 px-6 text-sm font-medium text-gray-300">Id</th>
                        <th class="py-3 px-6 text-sm font-medium text-gray-300">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for stage in stages %}
                    <tr class="border-b border-gray-200">
                        <td class="py-3 px-6">{{ stage.id }}</td>
                        <td class="py-3 px-6 space-x-4">
                            <a href="{{ path('app_stage_show', {'id': stage.id}) }}" 
                               class="text-blue-600 hover:text-blue-800 font-medium">Voir</a>

                            <a href="{{ path('app_stage_edit', {'id': stage.id}) }}" 
                               class="text-yellow-600 hover:text-yellow-800 font-medium">Modifier</a>

                            <a href="{{ path('app_stage_delete', {'id': stage.id}) }}" 
                               class="text-red-600 hover:text-red-800 font-medium"
                               onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce stage ?')">Supprimer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2" class="py-3 px-6 text-center text-gray-500">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Create new button -->
        <div class="mt-6">
            <a href="{{ path('app_stage_new') }}" 
               class="inline-block px-6 py-2 text-white bg-blue-600 hover:bg-blue-700 rounded-lg font-medium">
                Créer un nouveau stage
            </a>
        </div>
    </div>
{% endblock %}
