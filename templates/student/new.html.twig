{% extends 'base.html.twig' %}

{% block title %}New Student{% endblock %}

{% block body %}
<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">Créer un nouvel étudiant</h1>

    {% for message in app.session.flashbag.get('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    {% for message in app.session.flashbag.get('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    <div class="bg-white p-8 rounded-lg shadow-md">
        <h2 class="text-xl font-semibold mb-4">Détails de l'étudiant</h2>

        <form method="POST" action="{{ path('app_student_new') }}" class="space-y-6">
            {{ form_start(form) }}

            {{ include('student/_form.html.twig') }}

            {{ form_end(form) }}
        </form>
    </div>

     <div class="mt-6 flex justify-between">
                    <a href="{{ path('app_student_index') }}" class="inline-block px-6 py-2 text-white bg-gray-600 hover:bg-gray-700 rounded-lg font-medium">
                        Retour à la liste
                    </a>
</div>
{% endblock %}
