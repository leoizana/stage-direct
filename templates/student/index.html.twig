{% extends 'base.html.twig' %}

{% block title %}Liste des Étudiants{% endblock %}

{% block body %}
<div class="container mx-auto py-8 px-4">
    <!-- Titre principal -->
    <h1 class="text-4xl font-extrabold text-gray-800 mb-8 text-center">Liste des Étudiants</h1>

    <!-- Barre de recherche -->
    <div class="mb-6 flex justify-center space-x-4">
        <input type="text" id="search-bar-name" placeholder="Rechercher par nom ou prénom"
               class="w-full max-w-lg px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring focus:ring-blue-200"
               onkeyup="searchStudents()">
        <input type="text" id="search-bar-class" placeholder="Rechercher par classe"
               class="w-full max-w-lg px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring focus:ring-blue-200"
               onkeyup="searchStudentsByClass()">
    </div>

    <!-- Tableau des étudiants -->
    <div class="overflow-x-auto shadow-md sm:rounded-lg">
        <table class="min-w-full text-sm text-gray-800 bg-white border border-gray-300 rounded-lg">
            <thead class="bg-blue-600 text-white">
                <tr>
                    <th class="py-3 px-6 font-semibold">Id</th>
                    <th class="py-3 px-6 font-semibold">Prénom</th>
                    <th class="py-3 px-6 font-semibold">Nom</th>
                    <th class="py-3 px-6 font-semibold">Téléphone</th>
                    <th class="py-3 px-6 font-semibold">Classe</th>
                    <th class="py-3 px-6 font-semibold">Actions</th>
                </tr>
            </thead>
            <tbody id="students-tbody">
                {% for student in students %}
                    <tr class="border-b hover:bg-gray-100">
                        <td class="py-3 px-6">{{ student.id }}</td>
                        <td class="py-3 px-6">{{ student.firstName }}</td>
                        <td class="py-3 px-6">{{ student.lastName }}</td>
                        <td class="py-3 px-6">{{ student.phone }}</td>
                        <td class="py-3 px-6">{{ student.grade.className }}</td>

                        <td class="py-3 px-6 flex items-center justify-center space-x-2">
                            <a href="{{ path('app_student_show', {'id': student.id}) }}" class="text-blue-600 hover:text-blue-800 font-medium flex items-center">
                                <img src="{{ asset('svg/eye-svgrepo-com.svg') }}" alt="Voir" class="w-5 h-5">
                            </a>
                            
                            <a href="{{ path('app_student_edit', {'id': student.id}) }}" class="text-yellow-600 hover:text-yellow-800 font-medium flex items-center">
                                <img src="{{ asset('svg/pencil-svgrepo-com.svg') }}" alt="Éditer" class="w-5 h-5">
                            </a>
                            
                            {{ include('student/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="py-3 px-6 text-center text-gray-500">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% if is_granted('ROLE_TEACHER') %}
    <div class="mt-6 text-center">
        <a href="{{ path('app_student_new') }}"
           class="inline-block px-6 py-3 text-white bg-blue-600 hover:bg-blue-700 rounded-lg font-medium shadow-lg">
            Créer un nouvel étudiant
        </a>
    </div>
    {% endif %}
</div>

<script>
    function searchStudents() {
        const filter = document.getElementById("search-bar-name").value.toLowerCase();
        const rows = document.querySelectorAll("#students-tbody tr");

        rows.forEach(row => {
            const nameCell = row.cells[1]?.textContent.toLowerCase();
            const lastNameCell = row.cells[2]?.textContent.toLowerCase();

            if (nameCell.includes(filter) || lastNameCell.includes(filter)) {
                row.style.display = "";
            } else {
                row.style.display = "none";
            }
        });
    }

    function searchStudentsByClass() {
        const filter = document.getElementById("search-bar-class").value.toLowerCase();
        const rows = document.querySelectorAll("#students-tbody tr");

        rows.forEach(row => {
            const classCell = row.cells[4]?.textContent.toLowerCase();

            if (classCell.includes(filter)) {
                row.style.display = "";
            } else {
                row.style.display = "none";
            }
        });
    }
</script>
{% endblock %}