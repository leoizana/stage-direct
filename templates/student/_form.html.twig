        {{ form_errors(form.phone) }}
    </div>

    <!-- Email -->
    <div class="space-y-2">
        <label for="{{ form.email.vars.id }}" class="block text-sm font-medium text-gray-700">Email</label>
        {{ form_widget(form.email, { 'attr': { 'class': 'px-4 py-2 w-full border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none' } }) }}
        {{ form_errors(form.email) }}
    </div>

    <!-- École -->
    <div class="space-y-2">
        <label for="{{ form.school.vars.id }}" class="block text-sm font-medium text-gray-700">École</label>
        {{ form_widget(form.school, { 'attr': { 'class': 'px-4 py-2 w-full border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none' } }) }}
        {{ form_errors(form.school) }}
    </div>

    <!-- Classe -->
    <div class="space-y-2">
        <label for="{{ form.grade.vars.id }}" class="block text-sm font-medium text-gray-700">Classe</label>
        {{ form_widget(form.grade, { 'attr': { 'class': 'px-4 py-2 w-full border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none' } }) }}
        {{ form_errors(form.grade) }}
