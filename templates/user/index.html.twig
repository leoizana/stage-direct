{% extends 'base.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block body %}
<div class="container mx-auto py-8 px-4">
    <h1 class="text-4xl font-extrabold text-gray-800 mb-8 text-center">Liste des Utilisateurs</h1>

    <!-- Tableau -->
    <div class="overflow-x-auto shadow-md sm:rounded-lg">
        <table class="min-w-full text-sm text-gray-800 bg-white border border-gray-300 rounded-lg">
            <thead class="bg-blue-600 text-white">
                <tr>
                    <th class="py-3 px-6 font-semibold">Id</th>
                    <th class="py-3 px-6 font-semibold">Email</th>
                    <th class="py-3 px-6 font-semibold">Rôles</th>
                    <th class="py-3 px-6 font-semibold">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr class="border-b hover:bg-gray-100">
                    <td class="py-3 px-6">{{ user.id }}</td>
                    <td class="py-3 px-6">{{ user.email }}</td>
                    <td class="py-3 px-6">{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td class="py-3 px-6 flex items-center justify-center space-x-2">
                        <a href="{{ path('app_user_show', {'id': user.id}) }}" class="text-blue-600 hover:text-blue-800 font-medium flex items-center">
                            <img src="{{ asset('svg/eye-svgrepo-com.svg') }}" alt="Voir" class="w-5 h-5">
                        </a>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="text-yellow-600 hover:text-yellow-800 font-medium flex items-center">
                            <img src="{{ asset('svg/pencil-svgrepo-com.svg') }}" alt="Éditer" class="w-5 h-5">
                        </a>
                        <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="flex items-center">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                            <button type="submit" class="text-red-600 hover:text-red-800 font-medium flex items-center">
                                <img src="{{ asset('svg/trash-svgrepo-com.svg') }}" alt="Supprimer" class="w-5 h-5">
                            </button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="py-3 px-6 text-center text-gray-500">Aucun utilisateur trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Bouton pour créer un nouvel utilisateur -->
    <div class="mt-6 text-center">
        <a href="{{ path('app_user_new') }}" 
           class="inline-block px-6 py-3 text-white bg-blue-600 hover:bg-blue-700 rounded-lg font-medium shadow-lg">
            Créer un nouvel utilisateur
        </a>
    </div>
</div>
{% endblock %}
