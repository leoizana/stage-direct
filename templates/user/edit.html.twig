{% extends 'base.html.twig' %}

{% block title %}Modifier l'Utilisateur{% endblock %}

{% block body %}
    <div class="container mx-auto p-6">
        <h1 class="text-3xl font-bold mb-6 text-center">Modifier l'Utilisateur</h1>

        <!-- Formulaire -->
        <div class="bg-white p-8 rounded-lg shadow-md">
            <h2 class="text-xl font-semibold mb-4">Détails de l'Utilisateur</h2>

            <form method="post" action="{{ path('app_user_edit', {'id': user.id}) }}" class="space-y-4">
                {{ form_start(form) }}

                <div class="mb-6">
                    {{ form_label(form.email, null, {'label_attr': {'class': 'text-white text-sm font-medium mb-2'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'}}) }}
                </div>

                {% if form.password is defined %}
    <div class="mb-6">
        {{ form_label(form.password, null, {'label_attr': {'class': 'text-white text-sm font-medium mb-2'}}) }}
        {{ form_widget(form.password, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'}}) }}
    </div>
{% endif %}

                <div class="mb-6">
                    {{ form_label(form.firstName, null, {'label_attr': {'class': 'text-white text-sm font-medium mb-2'}}) }}
                    {{ form_widget(form.firstName, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'}}) }}
                </div>

                <div class="mb-6">
                    {{ form_label(form.lastName, null, {'label_attr': {'class': 'text-white text-sm font-medium mb-2'}}) }}
                    {{ form_widget(form.lastName, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'}}) }}
                </div>

                <div class="mb-6">
                    {{ form_label(form.birthDate, null, {'label_attr': {'class': 'text-white text-sm font-medium mb-2'}}) }}
                    {{ form_widget(form.birthDate, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'}}) }}
                </div>

                <div class="mb-6">
                    {{ form_label(form.address, null, {'label_attr': {'class': 'text-white text-sm font-medium mb-2'}}) }}
                    {{ form_widget(form.address, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'}}) }}
                </div>

                <div class="mb-6">
                    {{ form_label(form.postalCode, null, {'label_attr': {'class': 'text-white text-sm font-medium mb-2'}}) }}
                    {{ form_widget(form.postalCode, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'}}) }}
                </div>

                <div class="mb-6">
                    {{ form_label(form.city, null, {'label_attr': {'class': 'text-white text-sm font-medium mb-2'}}) }}
                    {{ form_widget(form.city, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-3 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'}}) }}
                </div>

                {% if is_granted('ROLE_ADMIN') %}
                <div class="mb-6">
                    <label for="roles-dropdown" class="text-white text-sm font-medium mb-2">Rôles</label>

                    <div class="relative">
                        <button id="roles-dropdown" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" type="button">
                            Choisir un rôle
                            <svg class="w-2.5 h-2.5 ms-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
                            </svg>
                        </button>

                        <div id="roles-dropdown-menu" class="z-10 hidden w-48 bg-white divide-y divide-gray-100 rounded-lg shadow dark:bg-gray-700 dark:divide-gray-600 absolute mt-1">
                            <ul class="p-3 space-y-3 text-sm text-gray-700 dark:text-gray-200">
                                {% for role in form.roles %}
                                    <li>
                                        <div class="flex items-center">
                                            {{ form_widget(role, {'attr': {'class': 'w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500'}}) }}
                                            {{ form_label(role, null, {'label_attr': {'class': 'ms-2 text-sm font-medium text-gray-900 dark:text-gray-300'}}) }}
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>

                <script>
                    // Dropdown toggle logic
                    document.getElementById('roles-dropdown').addEventListener('click', function() {
                        let dropdownMenu = document.getElementById('roles-dropdown-menu');
                        dropdownMenu.classList.toggle('hidden');
                    });

                    // Close dropdown when clicking outside
                    window.addEventListener('click', function(event) {
                        let dropdown = document.getElementById('roles-dropdown-menu');
                        let button = document.getElementById('roles-dropdown');
                        if (!button.contains(event.target) && !dropdown.contains(event.target)) {
                            dropdown.classList.add('hidden');
                        }
                    });
                </script>
                {% endif %}

                <div class="flex justify-between mt-6">
                    <!-- Bouton Retour à la liste avec le même style que mentionné -->
                    <a href="{{ path('app_user_index') }}" 
                       class="inline-block px-6 py-2 text-white bg-gray-600 hover:bg-gray-700 rounded-lg font-medium">
                        Retour à la liste
                    </a>

                    <!-- Bouton Enregistrer aligné à droite -->
                    <button type="submit" 
                            class="px-6 py-2 text-white bg-blue-600 hover:bg-blue-700 rounded-lg font-medium">
                        Enregistrer les modifications
                    </button>
                </div>

                {{ form_end(form) }}
            </form>
        </div>
    </div>
{% endblock %}
